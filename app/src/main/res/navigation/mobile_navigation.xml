<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/popular_movies">

    <fragment
        android:id="@+id/popular_movies"
        android:name="com.example.moviesdb.ui.PopularMoviesFragment"
        android:label="Popular Movies"
        tools:layout="@layout/fragment_popular_movies"/>

    <fragment
        android:id="@+id/top_rated_movies"
        android:name="com.example.moviesdb.ui.TopRatedMoviesFragment"
        android:label="Top Rated Movies"
        tools:layout="@layout/fragment_upcoming_movies"/>

    <fragment
        android:id="@+id/now_playing"
        android:name="com.example.moviesdb.ui.NowPlayingMoviesFragment"
        android:label="Now Playing"
        tools:layout="@layout/fragment_now_playing_movies"/>

    <fragment
        android:id="@+id/upcoming_movies"
        android:name="com.example.moviesdb.ui.UpcomingMoviesFragment"
        android:label="Upcoming Movies"
        tools:layout="@layout/fragment_top_rated_movies"/>

</navigation>